       var time = (1000 * 60) * 5;
       var url = obtenerURL();
       var urlInit = "@Url.Content("~/Login/LogOff")";
       var urlSession = "@Url.Content("~/SessionTimer/Index")";
    </script>*@
    <!-- INIT PLUGINS  -->
    @*@Scripts.Render("~/bundles/custom")*@
    @RenderSection("scripts", required: false)
</body>
</html>

